<%- include('includes/header.ejs')  %>
<body>
    <h4>je suis login</h4>
    <% if(locals.message){ %>
        <p style="color: green;"> <%= locals.message %> </p>
    <% } %>  

    <% if(locals.error){ %>
    <p style="color: red;"><%= locals.error %> </p>
    <% } %>  
    <div class="card col-md-10">
       
            <div class="row">                    
                <div class="col-md-4"> 
                                                                            
                     <img class="card-img-top m-1" src="/img/web.jpg " alt="Card image cap">  
                                                    
                </div>
                <div class="col-md-4">
                    <div class="card-body  "> 
                        <form action="/login" method="post">   
                            <input type="email" name="email" placeholder="email" class="form-control m-3">
                            <input type="password" name="password" placeholder="password" class="form-control m-3">
                            <button type="submit" class="form-control m-3" style="background: blue;">login</button>
                            <a type="button"  href="/register" class="form-control m-3 " style="background: blue;">S'inscrire</a>
                       </form>
                    </div>
                </div>                          
            </div>
       
    </div>          
   
</body>
